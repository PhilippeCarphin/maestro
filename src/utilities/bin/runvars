#!/bin/ksh



arguments=$*

eval `cclargs_lite $0 \
  -c        ""                    ""                           "[cfg to run         ]" \
  -o        ""                    ""                           "[output results     ]" \
  -i        ""                    ""                           "[input config to eval     ]" \
  -v        ""                    ""                           "[verbose mode     ]" \
  -h        ""                    ""                           "[Display help       ]" \
  ++ $arguments`                                                                                                                                                                                                                   

. $c 

if [[ $v != "" ]] ; then  
  set -x
fi

ksh -n $i || (echo "Syntax error in input file."; exit 1)
$MAESTRO_BIN/varsed.py -i $i 1>$TMPDIR/tmpvarsed.$$
while read LINE ; do eval echo $LINE ; done < $TMPDIR/tmpvarsed.$$ > $o 2>/dev/null
rm -f $TMPDIR/tmpvarsed.$$
