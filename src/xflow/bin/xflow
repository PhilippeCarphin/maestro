#!/bin/ksh

assert_x11_forwarding_is_enabled || exit 1

[[ "$1" = --help || "$1" = -h ]] && set -h
# check tcl/tk installation: 
[[ -z ${MAESTRO_DOMAIN} ]] && echo "MAESTRO_DOMAIN not set, maestro installation incomplete" && exit 1 

export PATH=${PATH}:${MAESTRO_SRC}/tcl/bin
export TCL_LIBRARY=${TCL_LIBRARY}:${MAESTRO_SRC}/tcl/lib/tcl8.5
export TK_LIBRARY=${TK_LIBRARY}:${MAESTRO_SRC}/tcl/lib/tk8.5
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$MAESTRO_TCL_LIB

TCLSH=$(which maestro_wish8.5)

if [[ "${TCLSH}" == "" ]] ; then
   echo "Aborted. Could not find maestro_wish8.5." >&2
   exit 
fi

if [[ "${MAESTRO_BIN}" == "" ]] ; then
   echo "MAESTRO_BIN environment variable not defined! Exiting..." >&2
   exit 
fi

[[ -f "${MAESTRO_SRC}/xflow/etc/check_deprecation" ]] && . "${MAESTRO_SRC}/xflow/etc/check_deprecation"

arguments=$*
eval `cclargs $0 "[For complete and up to date information on this command, see the man page by typing 'man xflow']" \
  -d            ""      ""      "[sequencer date]" \
  -exp          ""      ""      "[experiment path]" \
  -noautomsg "0"        "1"   "[value 1 means no auto message display]" \
  -nosubmitpopup "0"        "1"   "[value 1 means no submit popup]" \
  -rc ""        ""      "[maestrorc preferrence file]" \
  -n ""      ""      "[focus on this node at startup]" \
  -l ""      ""      "[loop arguments to node argument]" \
  -debug        "0"     "1"     "[debug message]" \
  ++ $arguments`

test "${noautomsg}" != "" && automsg_opt="-noautomsg ${noautomsg}" || automsg_opt=""
test "${nosubmitpopup}" != "" && nosubmitpopup_opt="-nosubmitpopup ${nosubmitpopup}" || nosubmitpopup=""

date_opt=""
if [[ "${d}" != "" ]] ; then

	datestamp_regex='^[0-9]{8,14}$'
	if ! [[ $d =~ $datestamp_regex ]] ; then
		echo "Aborted. Bad '-d' option. Datestamps must be 8 to 14 digits for YYYYMMDDhhmmss like:
	20200401
	2020040112
	20200401120000"
		exit 1
	fi

	# Transform datestamps like YYYYMMDD or YYYYMMDDhh into YYYYMMDDhhmmss by adding zeroes.
	# First add lots of extra zeroes.
	d=${d}000000
	# Take just the first 14 characters.
	d=${d:0:14}

     	print "\n starting $(basename $0) with date ${d}"
     	date_opt="-date ${d}"
fi
exp_opt=""
if [[ "${exp}" != "" ]] ; then
   print "\n starting $(basename $0) with exp ${exp}"
   exp_opt="-exp ${exp}"
fi
rc_opt=""
if [[ "${rc}" != "" ]] ; then
   print "\n maestrorc preferrence file ${rc}"
   [[ ! -f ${rc} ]] && print "\nxflow ERROR: file not found ${rc}" && exit 1
   rc_opt="-rc ${rc}"
fi
node_opt=""
if [[ "${n}" != "" ]] ; then
   print "\n $(basename $0) will attempt to focus on node ${n}"
   node_opt="-node ${n}"
fi
loop_opt=""
if [[ "${l}" != "" ]] ; then
   if [[ "${node_opt}" == "" ]] ; then
      print "\nxflow ERROR: -l argument requires -n argument!"
      exit 1
   fi
   print "\n $(basename $0) got loop argument ${l}"
   loop_opt="-loop ${l}"
fi
debug_opt=""
if [[ "${debug}" = "1" ]] ; then
   debug_opt="-debug"
fi

echo $TCLSH ${MAESTRO_SRC}/xflow/lib/xflow.tcl -main ${automsg_opt} ${nosubmitpopup_opt} ${date_opt} ${rc_opt} ${node_opt} ${loop_opt} ${debug_opt}
export NO_STOP_MESSAGE=on
$TCLSH ${MAESTRO_SRC}/xflow/lib/xflow.tcl -main ${automsg_opt} ${nosubmitpopup_opt} ${date_opt} ${rc_opt} ${node_opt} ${loop_opt} ${debug_opt} ${exp_opt}
